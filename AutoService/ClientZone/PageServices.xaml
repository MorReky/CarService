                               Margin="15,5,0,0"
                               Width="350" >
                                <TextBlock 
                            Name="TxtStartPriceBlock2"
                            Text=""
                            TextDecorations="Strikethrough"/>
                                <TextBlock Text="Цена"/>
                                <TextBlock Text="руб."
                                   Margin="5,0,0,0"/>
                                <TextBlock Text="за"
                                   Margin="5,0,0,0"/>
                                <TextBlock Text="Продолжительность"
                                   Margin="5,0,0,0"/>
                            </StackPanel>
                            <StackPanel Orientation="Vertical" 
                                        VerticalAlignment="Bottom" 
                                        Margin="15,7,15,0">
                                <Button Content="Подробнее" 
                                        Click="BtnMoreInf_Click"
                                        VerticalAlignment="Bottom"/>
                            </StackPanel>
                        </StackPanel>
                    </StackPanel>
                </Border>
            </StackPanel>
            <!--Разметка информационного блока №3-->
            <StackPanel Orientation="Horizontal"
                        HorizontalAlignment="Center"
                        Margin="10"
                        Grid.Row="2">
                <Border BorderBrush="Gray"
                        BorderThickness="2">
                    <StackPanel Orientation="Horizontal"
                        Background="#FFFFFFE1">
                        <StackPanel Orientation="Horizontal"
                        HorizontalAlignment="Left">
                            <Image Source="..\Resorces\ServicesImage\diz.jpg"/>
                        </StackPanel>
                        <StackPanel Orientation="Vertical">
                            <TextBlock Text="Наименование услуги"
                               Name="TxtNameService3"
                               FontSize="14pt"
                               VerticalAlignment="Top"
                               Margin="15,5,0,0"/>

                                <Button Content="Подробнее" 
                                        Click="BtnMoreInf_Click"
                                        VerticalAlignment="Bottom"/>
                            </StackPanel>
                        </StackPanel>
                    </StackPanel>
                </Border>
            </StackPanel>
            <!--Разметка информационного блока №4-->

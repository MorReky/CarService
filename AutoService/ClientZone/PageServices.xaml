                        HorizontalAlignment="Center"
                        Margin="10"
                        Grid.Row="3">
                <Border BorderBrush="Gray"
                        BorderThickness="2">
                    <StackPanel Orientation="Horizontal"
                        Background="#FFFFFFE1">
                        <StackPanel Orientation="Horizontal"
                        HorizontalAlignment="Left">
                            <Image Source="..\Resorces\ServicesImage\diz.jpg"/>
                        </StackPanel>
                        <StackPanel Orientation="Vertical">
                            <TextBlock Text="Наименование услуги"
                               Name="TxtNameService4"
                               FontSize="14pt"
                               VerticalAlignment="Top"
                               Margin="15,5,0,0"/>
                            <StackPanel Orientation="Horizontal"
                               Margin="15,5,0,0"
                               Width="350" >
                                <TextBlock 
                            Name="TxtStartPriceBlock4"
                            Text=""
                            TextDecorations="Strikethrough"/>
                                <TextBlock Text="Цена"/>
                                <TextBlock Text="руб."
                                   Margin="5,0,0,0"/>
                                <TextBlock Text="за"
                                   Margin="5,0,0,0"/>
                                <TextBlock Text="Продолжительность"
                                   Margin="5,0,0,0"/>
                            </StackPanel>
                            <StackPanel Orientation="Vertical" 
                                        VerticalAlignment="Bottom" 
                                        Margin="15,7,15,0">
                                <Button Content="Подробнее" 
                                        Click="BtnMoreInf_Click"
                                        VerticalAlignment="Bottom"/>
                            </StackPanel>
                        </StackPanel>
                    </StackPanel>
                </Border>
            </StackPanel>
        </Grid>
    </Grid>
</Page>

                                        Margin="15,5,0,0"
                                        Width="350"
                                        HorizontalAlignment="Left">
                                <TextBlock Name="TxtStartPriceBlock2"
                                           Text=""
                                           Margin="0,0,5,0"
                                           TextDecorations="Strikethrough"/>
                                <TextBlock Text="Цена"
                                           x:Name="TxtPriceService2"/>
                                <TextBlock Text="руб."
                                           Margin="5,0,0,0"/>
                                <TextBlock Text="за"
                                           Margin="5,0,0,0"/>
                                <TextBlock Text="Продолжительность"
                                           x:Name="TxtDurationService2"
                                           Margin="5,0,0,0"/>
                            </StackPanel>
                            <StackPanel Margin="15,5,15,0"
                                        HorizontalAlignment="Left"
                                        VerticalAlignment="Top"
                                        Orientation="Horizontal"
                                        Visibility="Hidden"
                                        Name="StckpDiscount2">
                                <TextBlock Text="* cкидка" Margin="0,0,5,0"/>
                                <TextBlock Text="n"
                                           Name="TxtDiscount2"
                                           Margin="0,0,5,0"/>
                                <TextBlock Text="%"/>
                            </StackPanel>
                            <StackPanel Orientation="Horizontal"
                                        Margin="0,5,0,0">
                                <Button Content="Редактировать"
                                        Margin="5,0"
                                        Background="White"
                                        Click="BtnEditInf1_Click"
                                        Name="BtnEditInf2"/>
                                <Button Content="Удалить"
                                        Margin="5,0"
                                        Name="BtnDelete2"
                                        Click="BtnDelete1_Click"
                                        Background="White"
                                        />
                            </StackPanel>
                        </StackPanel>
                    </StackPanel>
                </Border>
            </StackPanel>
            <!--Разметка информационного блока №3-->
            <StackPanel Orientation="Horizontal"
                        HorizontalAlignment="Center"
                        Margin="3"
                        Grid.Row="2">
                <Border BorderBrush="Gray"
                        BorderThickness="2">
                    <StackPanel Orientation="Horizontal"
                                Background="#FFFFFFE1">
                        <StackPanel Orientation="Horizontal"
                                    HorizontalAlignment="Left">
                            <Image Source="..\Resorces\Услуги автосервиса\diz.jpg"
                                   Stretch="Uniform"
                                   Name="Image3"
                                   Width="145"/>
                        </StackPanel>
                        <StackPanel Orientation="Vertical"
                                    MinWidth="525">
                            <TextBlock Text="Наименование услуги"
                               Name="TxtNameService3"
                               FontSize="14pt"
                               VerticalAlignment="Top"
                               Margin="15,5,0,0"/>
                            <StackPanel Orientation="Horizontal"
                                        Margin="15,5,0,0"
                                        Width="350"
                                        HorizontalAlignment="Left">
                                <TextBlock Name="TxtStartPriceBlock3"
                                           Text=""
                                           Margin="0,0,5,0"
                                           TextDecorations="Strikethrough"/>
                                <TextBlock Text="Цена"
                                           x:Name="TxtPriceService3"/>
                                <TextBlock Text="руб."
                                           Margin="5,0,0,0"/>
                                <TextBlock Text="за"
                                           Margin="5,0,0,0"/>
                                <TextBlock Text="Продолжительность"
                                           x:Name="TxtDurationService3"
                                           Margin="5,0,0,0"/>
                            </StackPanel>
                            <StackPanel Margin="15,5,15,0"
                                        HorizontalAlignment="Left"
                                        VerticalAlignment="Top"
                                        Orientation="Horizontal"
                                        Visibility="Hidden"
                                        Name="StckpDiscount3">
                                <TextBlock Text="* cкидка" Margin="0,0,5,0"/>
                                <TextBlock Text="n"
                                           Name="TxtDiscount3"
                                           Margin="0,0,5,0"/>
                                <TextBlock Text="%"/>
                            </StackPanel>
                            <StackPanel Orientation="Horizontal"
                                        Margin="0,5,0,0">
                                <Button Content="Редактировать"
                                        Margin="5,0"
                                        Background="White"
                                        Click="BtnEditInf1_Click"
                                        Name="BtnEditInf3"/>
                                <Button Content="Удалить"
                                        Margin="5,0"
                                        Name="BtnDelete3"
                                        Click="BtnDelete1_Click"
                                        Background="White"
                                        />
                            </StackPanel>
                        </StackPanel>
                    </StackPanel>
                </Border>
            </StackPanel>
            <!--Разметка информационного блока №4-->
            <StackPanel Orientation="Horizontal"
                        HorizontalAlignment="Center"
                        Margin="3"
                        Grid.Row="3">
                <Border BorderBrush="Gray"
                        BorderThickness="2">
                    <StackPanel Orientation="Horizontal"
                                Background="#FFFFFFE1"
                                MinWidth="655">
                        <StackPanel Orientation="Horizontal"
                                    HorizontalAlignment="Left">
                            <Image Source="..\Resorces\Услуги автосервиса\diz.jpg"
                                   Stretch="Uniform"
                                   Name="Image4"
                                   Width="145"/>
                        </StackPanel>
                        <StackPanel Orientation="Vertical"
                                    MinWidth="525">
                            <TextBlock Text="Наименование услуги"
                               Name="TxtNameService4"
                               FontSize="14pt"
                               VerticalAlignment="Top"
                               Margin="15,5,0,0"/>
                            <StackPanel Orientation="Horizontal"
                                        Margin="15,5,0,0"
                                        Width="350"
                                        HorizontalAlignment="Left">
                                <TextBlock Name="TxtStartPriceBlock4"
                                           Text=""
                                           Margin="0,0,5,0"
                                           TextDecorations="Strikethrough"/>
                                <TextBlock Text="Цена"
                                           x:Name="TxtPriceService4"/>
                                <TextBlock Text="руб."
                                           Margin="5,0,0,0"/>
                                <TextBlock Text="за"
                                           Margin="5,0,0,0"/>
                                <TextBlock Text="Продолжительность"
                                           x:Name="TxtDurationService4"
                                           Margin="5,0,0,0"/>
                            </StackPanel>
                            <StackPanel Margin="15,5,15,0"
                                        HorizontalAlignment="Left"
                                        VerticalAlignment="Top"
                                        Orientation="Horizontal"
                                        Visibility="Hidden"
                                        Name="StckpDiscount4">
                                <TextBlock Text="* cкидка" Margin="0,0,5,0"/>
                                <TextBlock Text="n"
                                           Name="TxtDiscount4"
                                           Margin="0,0,5,0"/>
                                <TextBlock Text="%"/>
                            </StackPanel>
                            <StackPanel Orientation="Horizontal"
                                        Margin="0,5,0,0">
                                <Button Content="Редактировать"
                                        Margin="5,0"
                                        Background="White"
                                        Click="BtnEditInf1_Click"
                                        Name="BtnEditInf4"/>
                                <Button Content="Удалить"
                                        Margin="5,0"
                                        Name="BtnDelete4"
                                        Click="BtnDelete1_Click"
                                        Background="White"
                                        />
                            </StackPanel>
                        </StackPanel>
                    </StackPanel>
                </Border>
            </StackPanel>
        </Grid>
    </DockPanel>
</Page>

<Page x:Class="AutoService.AdminZone.PageServicesAdm"
      xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
      xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
      xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006" 
      xmlns:d="http://schemas.microsoft.com/expression/blend/2008" 
      xmlns:local="clr-namespace:AutoService.AdminZone"
      mc:Ignorable="d" 
      d:DesignHeight="450" d:DesignWidth="800"
      Title="Панель редактирования информации о сервисах">

    <DockPanel Background="White">
        <StackPanel Orientation="Horizontal"
                    DockPanel.Dock="Left"
                    HorizontalAlignment="Left"
                    >
            <Button Content="Назад"
                    Margin="0,35,0,0"
                    Width="90"
                    Name="BtnBack"
                    Click="BtnBack_Click"
                    FontFamily="Tw Cen Mt"
                    IsEnabled="False"/>
        </StackPanel>
        <StackPanel Orientation="Horizontal"
                        VerticalAlignment="Top"
                        HorizontalAlignment="Right"
                    DockPanel.Dock="Top">
            <Button Content="Назад"
                    Name="BtnBackFrm"
                    Background="#FFFFFFE1"
                    Visibility="Visible"                        
                    Style="{StaticResource ButtonMain}"
                    Width="100"
                    Height="25" 
                    Margin="0,5,10,0"
                    Click="BtnBackFrm_Click"/>
        </StackPanel>
        <StackPanel Orientation="Horizontal"
                    DockPanel.Dock="Right"
                    HorizontalAlignment="Center">
            <Button Content="Вперед"
                    Name="BtnNext"                    
                    Click="BtnNext_Click"
                    Margin="0,10,0,0"
                    Width="90"
                    FontFamily="Tw Cen Mt"/>
        </StackPanel>

        <Grid Margin="0,10,0,10" DockPanel.Dock="Top">
            <Grid.RowDefinitions>
                <RowDefinition Height="47*"/>
                <RowDefinition Height="47*"/>
                <RowDefinition Height="47*"/>
                <RowDefinition Height="47*"/>
            </Grid.RowDefinitions>



            <!--Разметка информационного блока №1-->
            <StackPanel Orientation="Horizontal"
                        Name="StckpOne"
                        HorizontalAlignment="Center"
                        Margin="3">
                <Border BorderBrush="Gray"
                        BorderThickness="2">
                    <StackPanel Orientation="Horizontal"
                                Background="#FFFFFFE1">
                        <StackPanel Orientation="Horizontal"
                                    HorizontalAlignment="Left">
                            <Image Source="..\Resorces\Услуги автосервиса\diz.jpg"
                                   Stretch="Uniform"
                                   Name="Image1"
                                   Width="145"/>
                        </StackPanel>
                        <StackPanel Orientation="Vertical"
                                    VerticalAlignment="Top"
                                    HorizontalAlignment="Center" 
                                    MinWidth="525">
                            <TextBlock Text="Наименование услуги"
                                       x:Name="TxtNameService1"                               
                                       FontSize="14pt"
                                       VerticalAlignment="Top"
                                       Margin="15,5,0,0"/>
                            <StackPanel Orientation="Horizontal"
                                        VerticalAlignment="Top"
                                        Margin="15,5,0,0"
                                        Width="350"
                                        HorizontalAlignment="Left">
                                <TextBlock x:Name="TxtStartPriceBlock1"
                                           Text=""
                                           TextDecorations="Strikethrough"
                                           Margin="0,0,5,0"/>
                                <TextBlock Text="Цена"
                                           x:Name="TxtPriceService1"/>
                                <TextBlock Text="руб."
                                   Margin="5,0,0,0"/>
                                <TextBlock Text="за"
                                   Margin="5,0,0,0"/>
                                <TextBlock Text="Продолжительность"
                                           x:Name="TxtDurationService1"
                                            Margin="5,0,0,0"/>
                            </StackPanel>
                            <StackPanel Margin="15,5,15,0"
                                        HorizontalAlignment="Left"
                                        VerticalAlignment="Top"
                                        Orientation="Horizontal"
                                        Visibility="Hidden"
                                        Name="StckpDiscount1">
                                <TextBlock Text="* cкидка" Margin="0,0,5,0"/>
                                <TextBlock Text="n"
                                           Name="TxtDiscount1"
                                           Margin="0,0,5,0"/>
                                <TextBlock Text="%"/>
                            </StackPanel>
                            <StackPanel Orientation="Horizontal"
                                        Margin="0,5,0,0">
                                <Button Content="Редактировать"
                                        Margin="5,0"
                                        Background="White"
                                        Click="BtnEditInf1_Click"
                                        Name="BtnEditInf1"/>
                                <Button Content="Удалить"
                                        Margin="5,0"
                                        Name="BtnDelete1"
                                        Click="BtnDelete1_Click"
                                        Background="White"
                                        />
                            </StackPanel>
                        </StackPanel>
                    </StackPanel>
                </Border>
            </StackPanel>
            <!--Разметка информационного блока №2-->
            <StackPanel Orientation="Horizontal"
                        HorizontalAlignment="Center"
                        Margin="3"
                        Grid.Row="1">
                <Border BorderBrush="Gray"
                        BorderThickness="2">
                    <StackPanel Orientation="Horizontal"
                                Background="#FFFFFFE1">
                        <StackPanel Orientation="Horizontal"
                        HorizontalAlignment="Left">
                            <Image Source="..\Resorces\Услуги автосервиса\diz.jpg"
                                   Stretch="Uniform"
                                   Name="Image2"
                                   Width="145"/>
                        </StackPanel>
                        <StackPanel Orientation="Vertical"
                                    MinWidth="525">

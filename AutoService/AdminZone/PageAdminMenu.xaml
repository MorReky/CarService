<Page x:Class="AutoService.AdminZone.PageAdminMenu"
      xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
      xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
      xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006" 
      xmlns:d="http://schemas.microsoft.com/expression/blend/2008" 
      xmlns:local="clr-namespace:AutoService.AdminZone"
      mc:Ignorable="d" 
      d:DesignHeight="450" d:DesignWidth="800"
      Title="Панель администратора">

    <Grid>
        <StackPanel Orientation="Vertical"
                    HorizontalAlignment="Center" 
                    VerticalAlignment="Center">
            <Button Content="Редактировать информацию о сервисах"
                    Style="{StaticResource ButtonMain}"
                    Name="BtnEditService"
                    Click="BtnEditService_Click"/>
            <Button Content="Запись клиента"
                    Style="{StaticResource ButtonMain}"
                    Name="BtnClientRecord"
                    Click="BtnClientRecord_Click"/>
            <Button Content="Ближайшие записи"
                    Style="{StaticResource ButtonMain}"
                    Name="BtnComingRecord"
                    Click="BtnComingRecord_Click"/>
        </StackPanel>
    </Grid>
</Page>
